{{ ansible_managed | comment }}

[Unit]
Description=prometheus {{ item.name }} exporter
After=network.target

[Service]
Type=simple
User={{ exporters_system_user }}
Group={{ exporters_system_group }}
ExecStart=/usr/local/bin/{{ item.name }} \
{% for collector in exporters_node_exporter_collectors -%}
{%   if not collector is mapping %}
    --collector.{{ collector }} \
{%   else -%}
{%     set name, options = (collector.items()|list)[0] -%}
    --collector.{{ name }} \
{%     for k,v in options|dictsort %}
    --collector.{{ name }}.{{ k }}={{ v }} \
{%     endfor -%}
{%   endif -%}
{% endfor -%}
{% for collector in exporters_node_exporter_disabled_collectors %}
    --no-collector.{{ collector }} \
{% endfor %}
    --web.listen-address=0.0.0.0:{{ item.port }}

SyslogIdentifier=exporters
Restart=always

[Install]
WantedBy=multi-user.target
