---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  labels:
    app.kubernetes.io/name: {{ item.name }}
    app.kubernetes.io/version: {{ item.version }}
  name: {{ item.name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: {{ item.name }}
subjects:
- kind: ServiceAccount
  name: {{ item.name }}
  namespace: kube-system
